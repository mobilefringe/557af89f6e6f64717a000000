                            <h5 class="new_store_name">{{store_name}}</h5>
                            <h5 class="promo_name">{{name}}</h5>
                            <a class="feature_read_more more" href="#" data-id = "{{id}}" id="more_{{id}}">MORE</a>
                            <div class="show_accordion" id="show_{{id}}" style="font-size:18px">
                                <p class="new_store_desc">{{dates}}</p>
                                <div class="new_store_desc">{{{rich_description}}}</div>
                                <div class="margin_15px"></div>
