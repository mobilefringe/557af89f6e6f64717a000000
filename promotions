<script>
    $(document).ready(function(e) {
        init(e);
        function renderAll (){
            init_home_hours();
            var all_promos = getPromotionsList();
            all_promos = all_promos.reverse();
            promo_array = []
            $.each( all_promos , function( key, val ){
                today = moment();
                webDate = moment(val.show_on_web_date)
                if (today >= webDate) {
                    promo_array.push(val)
                } 
            });
            all_promos = promo_array;
            renderPromos("#promo_container","#promo_template", all_promos);
            show_content();
            more_less(e);
        }
        loadMallDataCached(renderAll); 
    })
</script>