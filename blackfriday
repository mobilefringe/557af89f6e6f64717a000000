<script>
    $(document).ready(function(e) {
        init(e);
        function renderAll (){
            init_home_hours();
            var all_promos = getPromotionsList();
            all_promos = all_promos.sortBy(function(o){ return o.name });
            promo_array = []
            $.each( all_promos , function( key, val ){
                today = moment();
                webDate = moment(val.show_on_web_date);
                if (today >= webDate && val.is_special_promo == true) {
                    promo_array.push(val)
                } 
            });
            all_promos = promo_array;
            if (all_promos.length >0){
                renderSplPromos("#promo_container","#promo_template", all_promos);
            }
            else{
                $('#no_promos').html("There are currently no BLACK FRIDAY SPECIALS available, please check back again later.")
            }
            show_content();
            more_less(e);
        }
        loadMallDataCached(renderAll); 
    })
</script>