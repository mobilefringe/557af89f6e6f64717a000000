<script>
    $(document).ready(function(e) {
        init(e)
        function renderAll (){
            if (isIE () && isIE() <= 9) {
                window.location.replace("/pages/stc-security-safety-tips");
            }
            else{
                init_home_hours();
                renderpageHTML();
                $("#pages_stc-security-about-us_stores").show();
                show_content();
            }
        }
        
        function renderpageHTML(){
            var prefix = get_prefix();
            var page_array = ["stc-security-about-us", "stc-security-services", "stc-security-safety-checklist", "stc-security-job-opportunities"]
            full_page_array = []
            $.ajaxSetup({
                async: false
            });
            $.each( page_array , function( key, val ) {
                var pages_json = prefix+"/pages/" + val + ".json"
                $.getJSON(pages_json).then(function(data) {
                    add_to_page_array (data)
                });
            })
            
            $.ajaxSetup({
                async: true
            });
            renderInsidePages("#pages_container","#pages_template", full_page_array)
        }
        
        function add_to_page_array (data){
            full_page_array.push(data);
        }
        loadMallDataCached(renderAll); 
		
    });
</script>