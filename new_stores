<script>
    $(document).ready(function(e) {
        init(e);
        function renderAll (){
            init_home_hours();
            var coming_soon_stores = getComingSoonList();
            var new_stores = coming_soon_stores.concat(getNewStoresList());
            var nn = new_stores.sortBy(function(o){ return new Date( o.new_store_open_date ) });
            if (new_stores.length > 0){
                renderGeneral("#new_store_container","#new_store_template", new_stores);
            }
            else{
                $('#no_now_open').fadeIn();
            }
            show_content();
        }
        loadMallDataCached(renderAll); 
    })
</script>