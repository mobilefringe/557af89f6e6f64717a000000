<script>
    $(document).ready(function(e) {
        init(e);
        function renderAll (){
            var jobs = getJobsList();
            var all_jobs = jobs.sortBy(function(o){ return new Date(o.end_date) }).reverse();
            renderGeneral($('#jobs_container'), $('#jobs_template'), jobs, "jobs");
            show_content();
            init_home_hours();
            more_less(e);
        }
        loadMallDataCached(renderAll); 
    })
</script>