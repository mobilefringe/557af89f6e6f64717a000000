<script>
    $(document).ready(function(e) {
        init(e);
        
        function renderAll (){
            init_home_hours();
            var blogs = getBlogList().sortBy(function(o){ return o.name });
            var pathArray = window.location.pathname.split( '/' );
            var slug = pathArray[pathArray.length-1];
            var fashion = getFashionBySlug(slug);
            var fashion_images = fashion.fashion_images;
            var posts = getAllPublishedPosts();
            var published_posts = posts.sortBy(function(o){ return o.publish_date }).reverse();
            renderFashion("#fashion_container", "#fashion_template", fashion);
            renderFashion("#share_container", "#share_template", fashion);
            renderFashion("#fashion_desc_container", "#fashion_desc_template", fashion);
            renderFashionImages("#fashion_images_container", "#fashion_images_template", fashion_images);
            renderPosts("#side_links_container", "#side_links_template", published_posts.slice(0,3));
            renderBlogs("#blog_links_container", "#blog_links_template", blogs);
            show_content();
            $('.flexslider').flexslider({
                animation: "slide",
            });
        }
        loadMallDataCached(renderAll); 
    })
</script>