                    <h5 class="new_store_name">{{name}}</h5>
                
                    <a class="feature_read_more more" href="#" data-id = "{{id}}" id="more_{{id}}">MORE</a>
                    <div class="show_accordion" id="show_{{id}}">
                        <div class="new_store_desc">{{description}}</div>
