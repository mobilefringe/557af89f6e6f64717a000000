<script>
    $(document).ready(function(e) {
        init(e);
        function renderAll (){
            init_home_hours();
            var all_promos = getEventsList();
            all_promos = all_promos.reverse();
            promo_array = []
            $.each( all_promos , function( key, val ){
                today = moment();
                webDate = moment(val.show_on_web_date)
                if (today >= webDate) {
                    promo_array.push(val)
                } 
            });
            all_promos = promo_array;
            if (all_promos.length > 0 ){
                renderGeneral("#promo_container","#promo_template", all_promos, "events");
            }
            else{
                $('#no_events').fadeIn()
            }
            show_content();
            more_less(e);
        }
        loadMallDataCached(renderAll); 
    })
</script>