<script>
    $(document).ready(function(e) {
        init(e)
        function renderAll (){
            init_home_hours();
            renderpageHTML();
            $(".modal-backdrop").remove();
        }
        
        function renderpageHTML(){
            var pathArray = window.location.pathname.split( '/' );
            var slug = pathArray[pathArray.length-1];
            prefix = get_prefix();
            var pages_json = prefix+"/pages/" + slug + ".json"
            $.getJSON(pages_json).done(function(data) {
                
                $("#page_title").html(data.title)
                $("#mobile_page_title").html(data.title)
                $('#mm_page_content').html(data.body);
                $('iframe').addClass('scrolloff')
                $('#mm_page_content').on('click', function () {
                    $('iframe').removeClass('scrolloff');
                });
                $("iframe").mouseleave(function () {
                    $(this).addClass('scrolloff');
                });
            }).fail(function(jqXHR) {
                if (jqXHR.status == 404) {
                    $("#404_msg").fadeIn("fast");
                }
            }); 
            show_content();
            var side = ["/pages/stc-guest-services", "/pages/stc-gift-cards", "/pages/stc-", "/pages/stc-accessibility", "/pages/stc-security-safety-tips"]
            
            var path = window.location.pathname
            if ($.inArray(path, side) >= 0){
                $('#pages_side_nav').show()
            }
            switch(path){
                case "/pages/stc-gift-cards":
                    $('#side_img').attr('src', '//codecloud.cdn.speedyrails.net/sites/57fe89a56e6f643dc92f0100/image/jpeg/1480956772000/Giftcard_Retail_367x244.jpg');
                    break;
                case "/pages/stc-accessibility":
                    $('#side_img').attr('src', '//codecloud.cdn.speedyrails.net/sites/557af89f6e6f64717a000000/8145457936ef8cb613a266a0fefedb69/accessibility.jpg');
                    break;
                case "/pages/stc-security-safety-tips":
                    $('#side_img').attr('src', '//codecloud.cdn.speedyrails.net/sites/557af89f6e6f64717a000000/8145457936ef8cb613a266a0fefedb69/STC Security & Privacy.jpg');
                    break;
                case "/pages/stc-media-centre":
                    $('#side_img').attr('src', '//codecloud.cdn.speedyrails.net/sites/557af89f6e6f64717a000000/8145457936ef8cb613a266a0fefedb69/STC Share Your Thoughts & Media Centre.jpg');
                    break;
                case "/pages/stc-leasing--2":
                    $('#side_img').attr('src', '//codecloud.cdn.speedyrails.net/sites/557af89f6e6f64717a000000/8145457936ef8cb613a266a0fefedb69/accessibility.jpg');
                    break;
                case "/pages/stc-contact-us":
                    $('#side_img').attr('src', '//codecloud.cdn.speedyrails.net/sites/557af89f6e6f64717a000000/8145457936ef8cb613a266a0fefedb69/STC Contact Us.png');
                    break;
                case "/pages/stc-privacy":
                    $('#side_img').attr('src', '//codecloud.cdn.speedyrails.net/sites/557af89f6e6f64717a000000/8145457936ef8cb613a266a0fefedb69/STC Security & Privacy.jpg');
                    break;
                case "/pages/stc-privacy-policy":
                    $('#side_img').attr('src', '//codecloud.cdn.speedyrails.net/sites/557af89f6e6f64717a000000/8145457936ef8cb613a266a0fefedb69/STC Security & Privacy.jpg');
                    break;
            }
            
        }
        loadMallDataCached(renderAll); 
		
    });
</script>