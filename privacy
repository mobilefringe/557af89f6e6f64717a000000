<script>
    $(document).ready(function(e) {
        init(e)
        function renderAll (){
            if (isIE () && isIE () <= 9) {
                window.location.replace("/pages/stc-privacy-policy");
            }
            else{
                init_home_hours();
                renderpageHTML();
                $("#pages_stc-privacy-online-privacy-policy_stores").show();
                show_content();
            }
        }
        
        loadMallDataCached(renderAll); 
		
    });
    function renderpageHTML(){
        var prefix = get_prefix();
        var page_array = ["stc-privacy-online-privacy-policy", "stc-privacy-what-is-personal-information", "stc-privacy-what-information-are-we-responsible-for-protecting", "stc-privacy-what-information-do-we-collect-and-why", "stc-privacy-surveys-contests", "stc-privacy-video-surveillance", "stc-privacy-when-do-we-share-your-personal-information", "stc-privacy-gift-card-program", "stc-privacy-cookies"]
        full_page_array = [];
        
        $.each( page_array , function( key, val ) {
            var pages_json = prefix+"/pages/" + val + ".json"
            var jqXHR = $.ajax({
                url:pages_json,
                dataType: 'json',
                async: false,
                success: function(data){
                    full_page_array.push(data);    
                },
            });
        })
        renderInsidePages("#pages_container","#pages_template", full_page_array)
    }
    
    function add_to_page_array (data){
        full_page_array.push(data);
    }
</script>